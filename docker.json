{
  "variables": {
    "version": "0.0.1"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos:centos7",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
    "playbook_file": "playbook.yml"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "centos7-webserver",
      "tag": "{{user `version`}}"
    }
  ]
}
